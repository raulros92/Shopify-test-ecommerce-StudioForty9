{% schema %}
  {
    "name": "Marketing Banner",
    "tag": "section",
    "class": "section-marketing-banner",
    "max_blocks": 5,
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#004289"
      }
    ],
    "blocks": [
      {
        "type": "message",
        "name": "Message",
        "settings": [
          {
            "type": "select",
            "id": "icon",
            "label": "Icon",
            "default": "box",
            "options": [
              {
                "value": "box",
                "label": "Box"
              }, {
                "value": "truck",
                "label": "Truck"
              }, {
                "value": "map_pin",
                "label": "Map Pin"
              }
            ]
          }, {
            "type": "text",
            "id": "text",
            "label": "Text",
            "default": "Your message here"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Marketing Banner",
        "category": "Custom"
      }
    ]
  }
{% endschema %}